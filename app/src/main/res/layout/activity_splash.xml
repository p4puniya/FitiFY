<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/NoActionBarStyle"
    android:background="@color/colorPrimary"
    tools:context=".ui.SplashActivity">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_centerInParent="true"
        android:src="@drawable/logo"
        android:contentDescription="@string/logo_des"
        android:layout_width="200dp"
        android:layout_height="200dp"/>

    <TextView
        android:id="@+id/app_name_id"
        android:layout_below="@id/app_logo"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="@string/app_name"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/text_view_1"
        android:layout_width="243dp"
        android:layout_height="205dp"
        android:layout_below="@+id/app_name_id"
        android:layout_alignStart="@+id/app_name_id"
        android:layout_alignEnd="@+id/app_name_id"
        android:layout_marginStart="-35dp"
        android:layout_marginTop="-7dp"
        android:layout_marginEnd="-63dp"
        android:text="@string/subheading"
        android:textColor="@android:color/white"
        android:textSize="22sp" />

    <ProgressBar
        android:id="@+id/pb_loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_1"
        android:layout_alignStart="@+id/text_view_1"
        android:layout_alignEnd="@+id/text_view_1"
        android:layout_marginStart="79dp"
        android:layout_marginTop="-124dp"
        android:layout_marginEnd="94dp"
        android:contentDescription="@string/progressbar" />


</RelativeLayout>